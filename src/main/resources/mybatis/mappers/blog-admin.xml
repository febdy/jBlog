<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="blog-admin">

	<insert id="set_basic" parameterType="int">
	<![CDATA[
		INSERT INTO blog (userNo, blogTitle)
		VALUES (#{userNo}, 'Default_Title')
	]]>
	</insert>
	
	<select id="get_basic" parameterType="int" resultType="com.javaex.vo.BlogVo">
	<![CDATA[
		SELECT userNo, blogTitle, logoFile
		FROM blog
		WHERE userNo = #{userNo}
	]]>
	</select>

	<update id="basic_update" parameterType="com.javaex.vo.BlogVo">
	<![CDATA[
		UPDATE blog
		SET blogTitle = #{blogTitle}
	]]>
		<if test="logoFile != null and logoFile != '' ">
			, logoFile = #{logoFile}
		</if>
	<![CDATA[
		WHERE userNo = #{userNo}
	]]>
	</update>
	
	<insert id="set_category" parameterType="int">
	<![CDATA[
		INSERT INTO category
		VALUES (seq_category_no.nextval, #{userNo}, '미분류', '', sysdate)
	]]>
	</insert>
	
	<select id="get_cateList" parameterType="int" resultType="com.javaex.vo.CategoryVo">
	<![CDATA[
		SELECT cateNo, userNo, cateName, description, regDate
		FROM category
		WHERE userNo = #{userNo}
	]]>
	</select>

</mapper>